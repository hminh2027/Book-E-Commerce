<!-- breadcrumbs-area-start -->
<div class="breadcrumbs-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs-menu">
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#" >My Account</a></li>
                        <li><a href="#" >Order</a></li>
                        <li><a href="#" class="active">Order Detail</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs-area-end -->
<div class="your-order">
    <h3>Your order</h3>
    <div class="your-order-table table-responsive">
        <table>
            <thead>
                <tr>
                    <th class="product-name">Product</th>
                    <th class="product-total">Total</th>
                </tr>
            </thead>
            <tbody>
                {{#each orderDetails}}
                <tr class="cart_item">
                    <td class="product-name">
                        {{this.title}} x <strong class="product-quantity">{{this.quantity}}</strong>
                    </td>
                    <td class="product-total">
                        <span class="amount">{{this.price}}</span> đ
                    </td>
                </tr>
                {{/each}}
                <tr>
                    <td></td>
                </tr>
                <tr>
                    <th>Status</th>
                    <td>{{order.status}}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{order.date}}</td>
                </tr>
            </tbody>
            <tfoot>
                <tr class="shipping">
                    <th>Shipping</th>
                    <td>
                        {{order.shipping_method}} ({{order.shipping_price}} đ)
                    </td>
                </tr>
                <tr class="order-total">
                    <th>Order Total</th>
                    <td><strong><span class="amount">{{order.total}} đ</span></strong>
                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>