<!-- breadcrumbs-area-start -->
<div class="breadcrumbs-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs-menu">
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Blog</a></li>
                        <li><a href="#" class="active">Blog Detail</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs-area-end -->
<!-- blog-main-area-start -->
<div class="blog-main-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-12 col-12 order-lg-1 order-2 mt-sm-50">
                <div class="single-blog mb-50">
                    <div class="blog-left-title">
                        <h3>Search</h3>
                    </div>
                    <div class="side-form">
                        <form action="/blog" method="get">
                            <input name="search" type="text" placeholder="Search...." />
                            <a href="#"><i class="fa fa-search"></i></a>
                        </form>
                    </div>
                </div>
                <div class="single-blog">
                    <div class="blog-left-title">
                        <h3>Tags</h3>
                    </div>
                    <div class="blog-tag">
                        <ul>
                            {{#each tags}}
                            <li><a href="/blog?tagID={{this.id}}">{{this.tag_name}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-12 col-12 order-lg-2 order-1">
                <div class="blog-main-wrapper">
                    <div class="author-destils mb-30">
                        <div class="author-left">
                            <div class="author-description">
                                <p>Posted by:
                                    <a href="#">{{blog.username}}</a>
                                </p>
                                <span>{{blog.date}}</span>
                            </div>
                        </div>
                    </div>
                    <div class="blog-img mb-30">
                        <img src="{{blog.thumbnail}}" alt="blog" />
                    </div>
                    <div class="single-blog-content">
                        <div class="single-blog-title">
                            <h3>{{blog.title}}</h3>
                        </div>
                        <div class="blog-single-content">{{blog.body}}</div>
                    </div>
                    <div class="comment-tag">
                        <p>Tags: 
                            {{#each blogTags}}
                                <a href="/blog?tagID={{this.tag_id}}">{{this.tag_name}}</a>
                            {{/each}}
                        </p>
                    </div>
                    <div class="sharing-post mt-20">
                        <div class="share-text">
                            <span>Share this post</span>
                        </div>
                        <div class="share-icon">
                            <ul>
                                <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                                <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                                <li><a href="#"><i class="fa fa-dribbble"></i></a></li>
                                <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                                <li><a href="#"><i class="fa fa-instagram"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="comment-title-wrap mt-30">
                        <h3>{{blog.comments}} Comments</h3>
                    </div>
                    <div class="comment-reply-wrap mt-50">
                        <ul>
                            {{#each comments}}
                            <li>
                                <div class="public-comment">
                                    <div class="public-text">
                                        <div class="single-comm-top">
                                            <a href="#">{{this.username}}</a>
                                            <p>{{this.date}}</p>
                                        </div>
                                        <p>{{this.body}}</p>
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                    <div class="comment-title-wrap mt-30">
                        <h3>Leave a comment </h3>
                    </div>
                    <div class="comment-input mt-40">
                        <div class="comment-input-textarea mb-30">
                            <form action="#">
                                <label>Comment</label>
                                <textarea name="massage" cols="30" rows="10" placeholder="Write your comment here"></textarea>
                            </form>
                        </div>
                    </div>
                    <div class="single-post-button">
                        <a href="#">Post Comment</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- blog-main-area-end -->