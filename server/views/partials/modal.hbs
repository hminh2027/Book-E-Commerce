<div class="modal fade productModal" id="productModal{{this.id}}"  tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                        aria-hidden="true">x</span></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-5 col-sm-5 col-xs-12">
                        <div class="modal-tab">
                            <div class="product-details-large tab-content">
                                <div class="tab-pane active" id="image-1">
                                    <img src="{{this.image}}" alt="book" />
                                </div>
                                <div class="tab-pane" id="image-2">
                                    <img src="{{this.image}}" alt="book" />
                                </div>
                                <div class="tab-pane" id="image-3">
                                    <img src="{{this.image}}" alt="book" />
                                </div>
                                <div class="tab-pane" id="image-4">
                                    <img src="{{this.image}}" alt="book" />
                                </div>
                            </div>
                            <div class="product-details-small quickview-active owl-carousel">
                                <a class="active" href="#image-1"><img src="{{this.image}}" alt="book" /></a>
                                <a href="#image-2"><img src="{{this.image}}" alt="book" /></a>
                                <a href="#image-3"><img src="{{this.image}}" alt="book" /></a>
                                <a href="#image-4"><img src="{{this.image}}" alt="book" /></a>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-7 col-sm-7 col-xs-12">
                        <div class="modal-pro-content">
                            <h3>{{this.title}}</h3>
                            <div class="price">
                                <span>{{this.price}}</span>
                            </div>
                            <p style="margin: 5rem 0;">{{this.short_description}}</p>
                            <span>
                            {{#if this.quantity}}
                                <i class="fa fa-check"></i> In stock
                            {{else}}
                                <i class="fa fa-ban" style="color: red;"></i> Out ot stock
                            {{/if}}
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>