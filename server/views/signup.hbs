<!-- user-login-area-start -->
<div class="user-login-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="login-title text-center mb-30">
                    <h2>Sign Up</h2>
                </div>
            </div>
            <div class="offset-lg-2 col-lg-8 col-md-12 col-12">
                <div class="billing-fields">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="single-register">
                                <form action="#">
                                    <label>First Name<span>*</span></label>
                                    <input id='first_name' type="text" name="first_name" spellcheck="false" required/>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="single-register">
                                <form action="#">
                                    <label>Last Name<span>*</span></label>
                                    <input id='last_name' type="text" name="last_name" spellcheck="false" required/>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="single-register">
                        <form action="#">
                            <label>Company Name</label>
                            <input id='company_name' type="text" name="company_name" spellcheck="false" />
                        </form>
                    </div>
                    <div class="single-register">
                        <form action="#">
                            <label>Username<span>*</span></label>
                            <input id='username' type="text" name="username" spellcheck="false" required/>
                        </form>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="single-register">
                                <form action="#">
                                    <label>Email Address<span>*</span></label>
                                    <input id='email' type="email" name="email" spellcheck="false" required/>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="single-register">
                                <form action="#">
                                    <label>Phone<span>*</span></label>
                                    <input id='phone' type="tel" name="phone" spellcheck="false" required/>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="single-register">
                        <label>Country<span>*</span></label>
                        <select id='country' class="chosen-select" tabindex="1" style="width:100%;"
                            data-placeholder="Default Sorting" name="country" required>
                            {{#each countries}}
                            <option value="{{this.id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="single-register">
                        <form action="#">
                            <label>Address<span>*</span></label>
                            <input id='address' type="text" placeholder="Street address" name="address" spellcheck="false" required/>
                        </form>
                    </div>
                    <div class="single-register">
                        <form action="#">
                            <label>Town/City<span>*</span></label>
                            <input id='city' type="text" name="city" spellcheck="false" required/>
                        </form>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="single-register">
                                <form action="#">
                                    <label>State<span>*</span></label>
                                    <input id='state' type="text"  name="state" spellcheck="false" required/>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-12">
                            <div class="single-register">
                                <form action="#">
                                    <label>Postcode/zip<span>*</span></label>
                                    <input id='postcode' type="text" placeholder="Postcode/zip" name="postcode" spellcheck="false" required/>
                                </form>
                            </div>
                        </div>
                    </div>
                    <div class="single-register">
                        <form action="#">
                            <label>Account password<span>*</span></label>
                            <input id='password' type="password" placeholder="Password" name="password"  required/>
                        </form>
                    </div>
                    <div class="single-register">
                        <form action="#">
                            <label>Confirm password<span>*</span></label>
                            <input id='cfpassword' type="password" placeholder="Password" name="cf_password"  required />
                        </form>
                    </div>
                    <div class="single-register">
                        <a onclick="submit()" >Register</a>
                    </div>
                    <a href="login">Already have an account? Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- user-login-area-end -->
<script>
    const submit = () => {
        const username = $("#username").val().trim(),
            password = $("#password").val().trim(),
            cfpassword = $("#cfpassword").val().trim(),
            firstName = $("#first_name").val().trim(), 
            lastName = $("#first_name").val().trim(), 
            email = $("#email").val().trim(), 
            companyName = $("#company_name").val().trim(), 
            country = $("#country").val().trim(),
            phone = $("#phone").val().trim(), 
            address = $("#address").val().trim(), 
            city = $("#city").val().trim(), 
            state = $("#state").val().trim(), 
            postcode = $("#postcode").val().trim()

        const formData = { username, password, cfpassword, firstName, lastName, email, companyName, country, phone, address, city, state, postcode }
             
            console.log(formData)
        if (!username || !password || !cfpassword || !firstName || !lastName || !email || !country || !phone || !address || !city || !state || !postcode) return window.alert('Please fill all the required blank')
        if (password !== cfpassword) return window.alert('Password not match!')

        $.ajax({
            type: "POST",
            url: "/account/signup",
            async: false,
            data: formData,
            success: (res) => {
                console.log(res)
		    },
            error: (err) => {          
                return alert(err.responseJSON.msg)
            }
        })
    }
</script>