<!-- breadcrumbs-area-start -->
<div class="breadcrumbs-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumbs-menu">
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#" class="active">blog</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumbs-area-end -->
<!-- blog-main-area-start -->
<div class="blog-main-area mb-70">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-12 col-12 order-lg-1 order-2 mt-sm-50">
                <div class="single-blog mb-50">
                    <div class="blog-left-title">
                        <h3>Search</h3>
                    </div>
                    <div class="side-form">
                        <form action="/blog" method="get">
                            <input name="search" type="text" placeholder="Search...." />
                            <a href="#"><i class="fa fa-search"></i></a>
                        </form>
                    </div>
                </div>
                <div class="single-blog">
                    <div class="blog-left-title">
                        <h3>Tags</h3>
                    </div>
                    <div class="blog-tag">
                        <ul>
                            {{#each tags}}
                            <li><a href="/blog?tagID={{this.id}}">{{this.tag_name}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 col-md-12 col-12 order-lg-2 order-1">
                <div class="blog-main-wrapper">
                    {{#each blogs}}
                    <div class="single-blog-post">
                        <div class="author-destils mb-30">
                            <div class="author-left">
                                <div class="author-description">
                                    <p>Posted by: 
                                        <a href="#">{{this.username}}</a>
                                    </p>
                                    <span>{{this.date}}</span>
                                </div>
                            </div>
                        </div>
                        <div class="blog-img mb-30">
                            <a href="/blog/{{this.id}}"><img src="{{this.thumbnail}}" alt="blog" /></a>
                        </div>
                        <div class="single-blog-content">
                            <div class="single-blog-title">
                                <h3><a href="/blog/{{this.id}}">{{this.title}}</a></h3>
                            </div>
                            <div class="blog-single-content">
                                <p class="blog-body">{{this.body}}</p>
                            </div>
                        </div>
                        <div class="blog-comment-readmore">
                            <div class="blog-readmore">
                                <a href="/blog/{{this.id}}">Read more<i class="fa fa-long-arrow-right"></i></a>
                            </div>
                            <div class="blog-com">
                                <a href="/blog/{{this.id}}">{{this.comments}} comments</a>
                            </div>
                        </div>
                        
                    </div>
                    {{/each}}
                    <div class="blog-pagination text-center">
                        <ul>
                            <li><a href="#"><i class="fa fa-angle-left"></i></a></li>
                            {{#times pageCount}}
                            <li><a href="/blog?page={{this}}">{{this}}</a></li>
                            {{/times}}
                            <li><a href="#"><i class="fa fa-angle-right"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- blog-main-area-end -->
<script>
    $('.single-post').map((idx, e) => {
        const body = $(e).find('.post-body').text()
        $(e).find('.post-body').text(body.slice(0, 100))
    })
</script>